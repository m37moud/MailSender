{
  "manifest_version": 3,
  "name": "Gmail API Email Sender",
  "version": "3.0",
  "description": "Send emails directly via Gmail API with attachments",
  "permissions": [
    "activeTab",
    "storage",
    "identity"
  ],
  "host_permissions": [
    "https://www.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Gmail API Email Sender"
  },
  "oauth2": {
    "client_id": "694485948569-gcfq89i98tsno45dr1ic2dejhpafrkf3.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.send"
    ]
  }
}